
@{
    ViewData["Title"] = "Registration";
}

<h1>Registration 613</h1>
@using (Html.BeginForm("Registration", "Home"))
{
<fieldset>
    <label>First Name:</label>
    <input type="text" name="fname" maxlength="20" required />
    <br />

    <label>Last Name:</label>
    <input type="text" name="lname" maxlength="20" required />
    <br />
    <label>Email:</label>
    <input type="text" name="email" required />
    <br />
    <label>Birthday:</label>
    <input type="date" name="dob" required />
    <br />

    <label>Diet Restrictions:</label>
  
    <div>
        <input type="radio" id="lactoseIntollerant" name="diet" value="lactose">
        <label for="lactoseIntollerant">Lactose Intollerant</label>
    </div>

    <div>
        <input type="radio" id="diabeticDiet" name="diet" value="LowGlycemic">
        <label for="diabeticDiet">Low Glycemic</label>
    </div>

    <div>
        <input type="radio" id="kosherDiet" name="diet" value="kosher">
        <label for="kosherDiet">Kosher</label>
    </div>



    @*<input type="radio" name="password" maxlength="20" required />*@
    <br />
    <label>Password:</label>
    <input type="text" name="password" maxlength="20" required />
    <br />
    <label>Confirm Password:</label>
    <input type="text" name="password" maxlength="20" required />
    <br />

</fieldset>


/////////SUBMIT BUTTON/////////////
<input type="submit" value="Submit" />
}

